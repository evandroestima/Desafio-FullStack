{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend API for CRUD operations",
  "main": "server.ts",
  "scripts": {
    "start": "ts-node server.ts",
    "dev": "ts-node server.ts"
  },
  "start": {
    "app": "node server.js",
    "watch": {
      "app": {
        "watch": [
          "server.ts"
        ],
        "ext": "ts",
        "ignore": [
          "src/**/*.spec.ts"
        ],
        "exec": "ts-node ./server.ts"
      },
      "tsc": {
        "watch": [
          "./**/*.ts",
          "!./**/*.spec.ts"
        ],
        "ext": "ts",
        "exec": "tsc -p . --noEmit"
      }
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.9",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.3"
  }
}
